@inject Microsoft.AspNetCore.Identity.SignInManager<EmployeeManagementAuth.Models.ApplicationUser> signInManager

@if (signInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-action="Index" asp-controller="Employee">Employees</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-action="Index" asp-controller="Department">Departments</a>
    </li>
    <li class="nav-item" style="margin-left: 200px;">
        <form method="post" id="logoutForm" asp-action="Logoff" asp-controller="Account">
            <ul class="nav navbar-nav">
                <li class="nav-link">Hello, @User.Identity.Name</li>
                <li class="ml-5">
                    <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log Out</a>
                </li>
            </ul>
        </form>
    </li>
}
else
@*style="margin-left: 350px;*@
{
    <li class="nav-item" style="margin-left: 350px;">
        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
    </li>
}