@model EmployeeManagementAuth.Models.Department

@inject Microsoft.AspNetCore.Identity.SignInManager<EmployeeManagementAuth.Models.ApplicationUser> signInManager

@if (this.User.IsInRole(EmployeeManagementAuth.Utilities.Helper.Admin))
{
    <h2>Delete Department</h2>
    <hr>
    <form method="post" asp-action="DeletePost">
        <input asp-for="Id" hidden />
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="DepartmentName"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="DepartmentName" disabled class="form-control"/>
                    </div>
                </div>
                <div class="form-group-row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger" value="Delete" />
                            <a asp-action="Index" class="btn btn-info ml-5">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <h2>You don't have the permission to delete a Department.</h2>
    <hr>
    <div>
        <a asp-action="Index" class="btn btn-info ml-5">Back</a>
    </div>
}
