@model EmployeeManagementAuth.Models.Department

@inject Microsoft.AspNetCore.Identity.SignInManager<EmployeeManagementAuth.Models.ApplicationUser> signInManager

@if (this.User.IsInRole(EmployeeManagementAuth.Utilities.Helper.Admin))
{
    <h2>Create new Department</h2>
    <hr>
    <form method="post" asp-action="CreatePost">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-8">
                        <label asp-for="DepartmentName"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8">
                        <input asp-for="DepartmentName" class="form-control"/>
                        <span asp-validation-for="DepartmentName" class="text-danger"></span>
                    </div>
                </div>
                <hr>
                <div class="form-group-row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-success col-3" value="Add" />
                            <a asp-action="Index" class="btn btn-secondary col-3 ml-5">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <h2>You don't have the permission to add new Department.</h2>
    <hr>
    <div>
        <a asp-action="Index" class="btn btn-info ml-5">Back</a>
    </div>
}

<!-- client side validation -->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}