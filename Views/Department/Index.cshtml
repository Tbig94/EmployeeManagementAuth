@model IEnumerable<EmployeeManagementAuth.Models.Department>

@inject Microsoft.AspNetCore.Identity.SignInManager<EmployeeManagementAuth.Models.ApplicationUser> signInManager

@if (this.User.IsInRole(EmployeeManagementAuth.Utilities.Helper.Admin))
{
    <h2>Department List</h2>
    <hr>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Department">Add Department</a>
    
    @if (Model.Count() > 0)
    {
        <hr>
        <table class="table table-striped table-bordered text-center">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Edit / Remove
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model)
                {
                    <tr>
                        <td width = 50%>@department.DepartmentName</td>
                        <td width = 50%>
                            <a 
                                class="btn btn-primary"
                                asp-action="Update" 
                                asp-controller="Department" 
                                asp-route-Id="@department.Id">
                                Update Department
                            </a>
                            <a 
                                class="btn btn-danger"
                                asp-action="Delete" 
                                asp-controller="Department" 
                                asp-route-Id="@department.Id">
                                Delete Department
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <hr>
        <p>No Departments added yet.</p>
    }
}
else if (this.User.IsInRole(EmployeeManagementAuth.Utilities.Helper.User))
{
    <h2>Department List</h2>
    <hr>
    <a class="btn btn-primary disabled" asp-action="Create" asp-controller="Department">Add Department</a>
    
    @if (Model.Count() > 0)
    {
        <hr>
        <table class="table table-striped table-bordered text-center">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Edit / Remove
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model)
                {
                    <tr>
                        <td width = 50%>@department.DepartmentName</td>
                        <td width = 50%>
                            <a 
                                class="btn btn-primary disabled" 
                                asp-action="Update" 
                                asp-controller="Department" 
                                asp-route-Id="@department.Id">
                                Update Department
                            </a>
                            <a 
                                class="btn btn-danger disabled" 
                                asp-action="Delete" 
                                asp-controller="Department" 
                                asp-route-Id="@department.Id">
                                Delete Department
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <hr>
        <p>No Departments added yet.</p>
    }
}
else
{
    <h2>You don't have the permission to view Departments.</h2>
    <hr>
    <div>
        <a asp-action="Index", asp-controller="Home" class="btn btn-info ml-5">Back</a>
    </div>
}
















































