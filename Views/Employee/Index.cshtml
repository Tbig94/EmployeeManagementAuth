@model IEnumerable<EmployeeManagementAuth.Models.Employee>

@inject Microsoft.AspNetCore.Identity.SignInManager<EmployeeManagementAuth.Models.ApplicationUser> signInManager

@if (this.User.IsInRole(EmployeeManagementAuth.Utilities.Helper.Admin))
{
    <h2>Employee List</h2>
    <hr>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Employee">Add Employee</a>
    
    @if (Model.Count() > 0)
    {
        <hr>
        <table class="table table-striped table-bordered text-center">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Age
                    </th>
                    <th>
                        Salary
                    </th>
                    <th>
                        Department
                    </th>
                    <th>
                        Edit / Remove
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td width = 15%>@employee.FirstName</td>
                        <td width = 15%>@employee.LastName</td>
                        <td width = 15%>@employee.Age</td>
                        <td width = 15%>$@employee.Salary</td>
                        <td width = 15%>@employee.Department.DepartmentName</td>
                        <td width = 25%>
                            <div class="btn-group" role="group">
                                <a 
                                    class="btn btn-primary" 
                                    asp-action="Update" 
                                    asp-controller="Employee" 
                                    asp-route-Id="@employee.Id">
                                    Update Employee
                                </a>
                                <a 
                                    class="btn btn-danger" 
                                    asp-action="Delete" 
                                    asp-controller="Employee" 
                                    asp-route-Id="@employee.Id">
                                    Remove Employee
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table> 
    }
    else
    {
        <hr>
        <p>No Employees added yet.</p>
    }
}
else if (this.User.IsInRole(EmployeeManagementAuth.Utilities.Helper.User))
{
    <h2>Employee List</h2>
    <hr>
    <a class="btn btn-primary disabled" asp-action="Create" asp-controller="Employee">Add Employee</a>
    
    @if (Model.Count() > 0)
    {
        <hr>
        <table class="table table-striped table-bordered text-center">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Age
                    </th>
                    <th>
                        Salary
                    </th>
                    <th>
                        Department
                    </th>
                    <th>
                        Edit / Remove
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td width = 15%>@employee.FirstName</td>
                        <td width = 15%>@employee.LastName</td>
                        <td width = 15%>@employee.Age</td>
                        <td width = 15%>$@employee.Salary</td>
                        <td width = 15%>@employee.Department.DepartmentName</td>
                        <td width = 25%>
                            <div class="btn-group" role="group">
                                <a 
                                    class="btn btn-primary disabled" 
                                    asp-action="Update" 
                                    asp-controller="Employee" 
                                    asp-route-Id="@employee.Id">
                                    Update Employee
                                </a>
                                <a 
                                    class="btn btn-danger disabled" 
                                    asp-action="Delete" 
                                    asp-controller="Employee" 
                                    asp-route-Id="@employee.Id">
                                    Remove Employee
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table> 
    }
    else
    {
        <hr>
        <p>No Employees added yet.</p>
    }
}
else
{
     <h2>You don't have the permission to view Employees.</h2>
     <hr>
     <div>
         <a asp-action="Index" asp-controller="Home" class="btn btn-info ml-5">Back</a>
     </div>
}































































