@model EmployeeManagementAuth.Models.ViewModels.EmployeeVM

@inject Microsoft.AspNetCore.Identity.SignInManager<EmployeeManagementAuth.Models.ApplicationUser> signInManager

@if (this.User.IsInRole(EmployeeManagementAuth.Utilities.Helper.Admin))
{
    <h2>Add new Employee</h2>
    <hr>
    <form method="post" asp-action="CreatePost">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Employee.FirstName"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Employee.LastName"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Employee.Age"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Employee.Salary"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Employee.Department"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <input asp-for="Employee.FirstName" class="form-control"/>
                        <span asp-validation-for="Employee.FirstName" class="text-danger"></span>      <!-- validation span -->
                    </div>
                    <div class="col-2">
                        <input asp-for="Employee.LastName" class="form-control"/>
                        <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="Employee.Age" type="number" class="form-control"/>
                        <span asp-validation-for="Employee.Age" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="Employee.Salary" type="number" class="form-control"/>
                        <span asp-validation-for="Employee.Salary" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <select asp-for="Employee.DepartmentId" asp-items="@Model.TypeDropDown" class="form-control">
                            <option selected>(Select Department)</option>
                        </select>
                        <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
                    </div>
                </div>
                <hr>
                <div class="form-group-row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-success col-3" value="Add" />
                            <a asp-action="Index" class="btn btn-secondary col-3 ml-5">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
     <h2>You don't have the permission to add new Employee.</h2>
     <hr>
     <div>
         <a asp-action="Index" class="btn btn-info ml-5">Back</a>
     </div>
}



























































<!-- client side validation -->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}